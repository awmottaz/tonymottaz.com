---
layout: layouts/base.njk
---

<main class="post">
    <header>
        <h1>{{title}}</h1>
        {% if date %}
            <p class="subtitle">Posted on <time class="post-date" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
            </p>
        {% endif %}
    </header>

    {{ content | safe }}
</main>

<footer class="post-footer">
    <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/now">Now</a>
    </nav>
</footer>