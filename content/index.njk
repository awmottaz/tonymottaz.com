---
layout: layouts/root.njk
---

<h1>tonymottaz.com</h1>

<ul class="post-list">
	{%- for post in collections.post | reverse -%}
		<li class="post-list-item">
			<div class="post-layout">
				<time class="post-date" datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | readableDate }}</time>
				<a href="{{post.url}}">
					<span class="post-title">{{ post.data.title }}</span>
				</a>
			</div>
		</li>
	{%- endfor -%}
</ul>