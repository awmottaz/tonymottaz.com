<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% if title %}
			<title>{{ title }} - {{ site.title }}</title>
		{% else %}
			<title>{{ site.title }}</title>
		{% endif %}

		<meta name="generator" content="{{ eleventy.generator }}">

		<link rel="me" href="https://fosstodon.org/@tonymottaz"/>

		<link rel="alternate" type="application/rss+xml" title="RSS Feed for tonymottaz.com" href="/feed.xml"/>

		<link rel="preconnect" href="https://fonts.bunny.net">
		<link href="https://fonts.bunny.net/css?family=jetbrains-mono:400" rel="stylesheet"/>

		{%- css %}{% include "static/css/index.css" %}{% endcss %}

		<style>
			{% getBundle "css" %}
		</style>
	</head>
	<body>
		<a class="screen-reader screen-reader-focusable" href="#main">Skip to main content</a>

		<nav class="site-nav" role="navigation">
			<ul>
				<li>
					<a href="/">Home</a>
				</li>
				<li>
					<a href="/now">Now</a>
				</li>
				<li>
					<a href="/feed.xml">RSS</a>
				</li>
			</ul>
		</nav>

		<main id="main">{{ content | safe }}</main>
	</body>
</html>