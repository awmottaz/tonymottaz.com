---
layout: layouts/root.njk
---

<div class="post-page-layout">
	<header class="post-header">
		<h1 class="post-header__title">{{ title }}</h1>
		{% if date %}
		<time class="post-header__timestamp" datetime="{{ date | htmlDateString}}">{{date | readableDate}}</time>
		{% endif %}
	</header>
	{{ content }}
</div>